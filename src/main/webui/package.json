{
  "name": "agent-morpheus-client-webui",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:standalone": "VITE_STANDALONE=true vite",
    "dev:msw": "VITE_ENABLE_MSW=true vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "openapi:postprocess": "jq 'del(.servers)' ../../../target/generated/openapi/openapi.json > openapi.json.tmp && mv openapi.json.tmp openapi.json || (echo 'Warning: OpenAPI spec not found. Run openapi:generate first.' && exit 1)",
    "openapi:generate": "cd ../../.. && ./mvnw clean package -DskipTests -Dquarkus.quinoa.enabled=false && cd src/main/webui && npm run openapi:postprocess",
    "openapi:generate-client": "openapi --input openapi.json --output src/generated-client --client fetch --useOptions --useUnionTypes",
    "openapi:generate-all": "(npm run openapi:generate || true) && (npm run openapi:postprocess || true) && npm run openapi:generate-client"
  },
  "dependencies": {
    "@patternfly/react-charts": "^8.4.0",
    "@patternfly/react-component-groups": "^6.4.0",
    "@patternfly/react-core": "^6.4.0",
    "@patternfly/react-icons": "^6.4.0",
    "@patternfly/react-table": "^6.4.0",
    "lodash": "^4.17.21",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router": "^7.1.1",
    "react-router-dom": "^7.1.1",
    "victory": "^37.3.6"
  },
  "devDependencies": {
    "@types/lodash": "^4.17.23",
    "@types/node": "^22.7.5",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.5",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitejs/plugin-react": "^4.3.1",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.11",
    "msw": "^2.12.4",
    "openapi-typescript": "^7.0.0",
    "openapi-typescript-codegen": "^0.29.0",
    "typescript": "^5.5.4",
    "vite": "^5.4.2"
  },
  "msw": {
    "workerDirectory": [
      "public"
    ]
  }
}
